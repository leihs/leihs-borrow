#!/usr/bin/env bash
set -euo pipefail

### VARIABLES and PWD #########################################################

PROJECT_NAME="leihs-borrow"
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd "${PROJECT_DIR}"
source "shared-clj/bin/helpers/build.sh"

# you can override here some of the vars defined in helpers/build.sh, e.g.
# SHARED_CLJ_DIR="${PROJECT_DIR}/server/shared-clj"


### functions #################################################################

function build_core {
  ./bin/cljs-release
  ./bin/set-built-info
  ./bin/clj-uberjar
}



### MAIN ######################################################################

build
cd -
echo "OK âœ”"

