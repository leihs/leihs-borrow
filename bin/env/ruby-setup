#!/usr/bin/env bash
set -euo pipefail

PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd ../.. > /dev/null 2>&1 && pwd -P)"
ASDF_PLUGIN=ruby
ASDF_PLUGIN_URL=https://github.com/asdf-vm/asdf-ruby.git

source $PROJECT_DIR/bin/env/project.sh
source $PROJECT_DIR/bin/env/asdf-helper.bash

asdf-update-plugin

# Uninstall all versions of bundler except for the standard one
# which comes with the respective ruby version.
gem uninstall --all bundler

asdf reshim

bundle install --quiet "$@"
# vi: ft=sh
